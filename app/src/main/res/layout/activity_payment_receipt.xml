<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/llParent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_above="@+id/btn"
    android:background="@color/bg_color"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/star_pattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llBack"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_16sdp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBackArrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/ic_bw_white"
            />
        <TextView
            style="@style/textstyle1_bold_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Receipt"
            />
    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_rounded_card"
        tools:context=".ui.parent.TimeTableActivity">
            <RelativeLayout
                                android:padding="@dimen/_6sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:id="@+id/llprofile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                        <ImageView
                                            android:background="@drawable/ic_tapasya"
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_65sdp"
                                            android:layout_margin="@dimen/_8sdp"
                                            />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:id="@+id/tvBranch"
                                            style="@style/textstyle1_bold_12"
                                            android:text="Branch : "
                                            android:layout_height="wrap_content"
                                            android:textColor="#000"
                                            />

                                        <TextView
                                            android:layout_below="@+id/tvBranch"
                                            android:layout_width="match_parent"
                                            style="@style/textstyle1_medium_11"
                                            android:id="@+id/tvCompAddress"
                                            android:textColor="#878787"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:text="11 address Hyderabad\n 5000019"
                                            />

                                        <TextView
                                            android:layout_below="@+id/tvAddress"
                                            style="@style/textstyle1_medium_11"
                                            android:layout_width="match_parent"
                                            android:id="@+id/tvBranchMobile"
                                            android:textColor="#878787"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:text="Phone : 88138842394"
                                            />

                                    </LinearLayout>

                                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/llprofile"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="#AAAAAA" />
                                    <RelativeLayout
                                        android:id="@+id/rl"
                                        android:padding="@dimen/_6sdp"
                                        android:layout_below="@+id/line1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">


                                        <LinearLayout
                                            android:id="@+id/l1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">


                                            <TextView

                                                android:layout_weight="1"
                                                android:textColor="#000"
                                                style="@style/textstyle1_bold_12"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Issue Date"/>

                                            <TextView
                                                android:id="@+id/tvIssueDate"
                                                android:layout_weight="1"
                                                android:gravity="right"
                                                android:textColor="#000"
                                                style="@style/textstyle1_bold_12"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="10-05-2021"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/l2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/l1"
                                            android:layout_marginTop="10dp"
                                            android:orientation="horizontal">


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Status"
                                                style="@style/textstyle1_bold_12"
                                                android:textColor="#000"
                                                 />

                                            <TextView

                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/bg_present"
                                                android:paddingTop="@dimen/_4sdp"
                                                android:paddingBottom="@dimen/_4sdp"
                                                android:paddingLeft="@dimen/_16sdp"
                                                android:paddingRight="@dimen/_16sdp"
                                                android:text="Paid"
                                                style="@style/textstyle1_bold_12"
                                                android:textColor="#fff" />

                                        </LinearLayout>
                                    </RelativeLayout>
                <View
                    android:id="@+id/line2"
                    android:background="#AAAAAA"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_below="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>
                                <LinearLayout
                                    android:id="@+id/cd2"
                                    android:layout_below="@+id/line2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/_8sdp"
                                    android:paddingRight="@dimen/_8sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:id="@+id/t1"
                                            android:text="Receipt Number"
                                            android:layout_height="wrap_content"
                                            style="@style/textstyle1_medium_10"
                                            android:textColor="#BDBDBD"
                                            />


                                        <TextView
                                            android:layout_below="@+id/t1"
                                            android:layout_width="match_parent"
                                            android:id="@+id/t2"
                                            android:layout_height="wrap_content"
                                            android:text="Acedamic Year"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            style="@style/textstyle1_medium_10"
                                            android:textColor="#A1A1A1"

                                            />

                                        <TextView
                                            android:layout_below="@+id/t2"
                                            android:layout_width="match_parent"
                                            android:id="@+id/t3"
                                            android:textColor="#A1A1A1"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Student Name :"
                                            style="@style/textstyle1_medium_10"
                                            />

                                        <TextView
                                            android:layout_below="@+id/t3"
                                            android:layout_width="match_parent"
                                            android:id="@+id/t4"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Class :"
                                            style="@style/textstyle1_medium_10"
                                            android:textColor="#A1A1A1"
                                            />

                                        <TextView
                                            android:layout_below="@+id/t4"
                                            android:layout_width="match_parent"
                                            android:id="@+id/t5"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Father :"
                                            style="@style/textstyle1_medium_10"
                                            android:textColor="#A1A1A1"
                                            />

                                        <TextView
                                            android:layout_below="@+id/t5"
                                            android:layout_width="match_parent"
                                            android:id="@+id/t6"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Mobile Number :"
                                            style="@style/textstyle1_medium_10"
                                            android:textColor="#A1A1A1"
                                            />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:id="@+id/tvReceiptNum"
                                            android:text="TS12312312"
                                            style="@style/textstyle1_bold_10"
                                            android:layout_height="wrap_content"
                                            android:textColor="#000"
                                            />

                                        <TextView
                                            android:layout_below="@+id/tvReceiptNum"
                                            android:layout_width="match_parent"
                                            android:id="@+id/tvAcademic"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            style="@style/textstyle1_bold_10"
                                            android:layout_height="wrap_content"
                                            android:text="2021-2022"
                                            android:textColor="#000"
                                            />

                                        <TextView
                                            android:layout_below="@+id/tvAcademic"
                                            android:layout_width="match_parent"
                                            android:id="@+id/tvStudentName"
                                            android:textColor="#000"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            style="@style/textstyle1_bold_10"
                                            android:layout_height="wrap_content"
                                            android:text="Kothapalli Manasa"
                                            />

                                        <TextView
                                            android:layout_below="@+id/tvStudentName"
                                            android:layout_width="match_parent"
                                            android:id="@+id/tvClass"
                                            android:textColor="#000"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            style="@style/textstyle1_bold_10"
                                            android:layout_height="wrap_content"
                                            android:text="Junior Inter"
                                            />

                                        <TextView
                                            android:layout_below="@+id/tvClass"
                                            android:layout_width="match_parent"
                                            android:id="@+id/tvFatherName"
                                            style="@style/textstyle1_bold_10"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Kothapalli Mahesh"
                                            android:textColor="#000"
                                            />

                                        <TextView
                                            android:layout_below="@+id/tvFatherName"
                                            android:layout_width="match_parent"
                                            android:id="@+id/tvFMob"
                                            style="@style/textstyle1_bold_10"
                                            android:layout_height="wrap_content"
                                            android:text="99999999"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:textColor="#000"
                                            />

                                    </LinearLayout>
                                    <de.hdodenhof.circleimageview.CircleImageView
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/iv"
                                        app:civ_border_overlay="true"
                                        android:layout_gravity="left"
                                        android:layout_width="@dimen/_75sdp"
                                        android:layout_height="@dimen/_75sdp"
                                        app:civ_border_width="@dimen/_4sdp"
                                        app:civ_border_color="#FFF"/>



                                </LinearLayout>

                <View
                    android:id="@+id/line3"
                    android:background="#AAAAAA"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_below="@+id/cd2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>
                <TextView
                    android:id="@+id/tvCurrentPayment"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_below="@+id/line3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Payment"
                    android:textColor="#000"
                    style="@style/textstyle1_bold_12"
                    />
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cd4"
                                    android:layout_below="@+id/tvCurrentPayment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="@dimen/_2sdp"
                                    app:cardCornerRadius="@dimen/_8sdp"
                                    android:layout_margin="@dimen/_8sdp"
                                    app:cardMaxElevation="@dimen/_6sdp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:orientation="vertical"
                                            android:layout_height="wrap_content">

                                            <TableLayout
                                                android:id="@+id/tl"
                                                android:background="@color/blue_50"
                                                android:layout_below="@+id/tvreceipt"
                                                android:layout_width="match_parent"
                                                android:paddingBottom="@dimen/_4sdp"
                                                android:layout_height="match_parent">
                                                <TableRow
                                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                                    android:background="@color/blue_400"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="fill_parent">

                                                    <TextView
                                                        android:textColor="#fff"
                                                        android:text="S.No"
                                                        style="@style/textstyle1_bold_10"
                                                        android:padding="@dimen/_4sdp"
                                                        android:layout_weight="0"
                                                        android:layout_width="@dimen/_40sdp"
                                                        android:layout_height="wrap_content"
                                                        />

                                                    <TextView
                                                        android:textColor="#fff"
                                                        android:text="Description"
                                                        style="@style/textstyle1_bold_10"
                                                        android:padding="@dimen/_4sdp"
                                                        android:layout_weight="1"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        />

                                                    <TextView
                                                        android:textColor="#fff"
                                                        android:layout_weight="0"
                                                        android:text="Fee Amount"
                                                        android:padding="@dimen/_4sdp"
                                                        style="@style/textstyle1_bold_10"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        />

                                                </TableRow>


                                            </TableLayout>
                                        </LinearLayout>
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>
            </RelativeLayout>
</LinearLayout>
    <android.widget.Button
        android:id="@+id/btn"
        android:text="Share"
        android:layout_margin="@dimen/_8sdp"
        android:background="@color/bg_color"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>