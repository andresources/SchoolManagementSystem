<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/star_pattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llBack"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_16sdp"
            android:layout_height="wrap_content">
            <TextView
                style="@style/textstyle1_bold_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payments"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/cvOneTimeDetails"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardMaxElevation="@dimen/_6sdp"
                app:cardPreventCornerOverlap="false">
                <TextView
                    android:id="@+id/tvPaymentHis"
                    android:text="Payment History"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:textColor="#000"
                    android:background="#F9B449 "
                    style="@style/textstyle1_bold_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_rounded_card"
        tools:context=".ui.parent.TimeTableActivity">
            <!--Dup Start-->
            <LinearLayout
                android:id="@+id/llDupParent"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDupTitle"
                android:background="@drawable/bg_dup_fee"
                style="@style/textstyle1_bold_14"
                android:text=""
                android:textColor="#FFF"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingRight="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    app:cardCornerRadius="@dimen/_1sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardMaxElevation="@dimen/_6sdp"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:id="@+id/llDup"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFF"
                        android:orientation="vertical">

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            <TextView
                android:text="(Or)"
                android:layout_marginTop="@dimen/_8sdp"
                style="@style/textstyle1_bold_20"
                android:textColor="@color/red_500"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
            <!--Dup End-->
        <!--Dup Start-->
        <LinearLayout
            android:id="@+id/llMainParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/llDupParent"
            android:layout_marginTop="@dimen/_16sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMainTitle"
                    style="@style/textstyle1_bold_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/bg_dup_fee"
                    android:paddingLeft="@dimen/_16sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingRight="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text=""
                    android:textColor="#FFF" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvTwoTimeDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardMaxElevation="@dimen/_6sdp"
                    app:cardPreventCornerOverlap="false">

                    <TextView

                        style="@style/textstyle1_bold_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="@string/details"
                        android:textColor="@color/green_500" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_1sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardMaxElevation="@dimen/_6sdp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:id="@+id/llMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:orientation="vertical">

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvPaymentHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/bg_holiday"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@string/payments_history"
                android:textColor="@color/white"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_1sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardMaxElevation="@dimen/_6sdp"
                app:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp">

                    <ImageView
                        android:id="@+id/ivEditPen"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/edit_pen"/>
                    <TextView
                        android:layout_toRightOf="@id/ivEditPen"
                        style="@style/textstyle1_medium_10"
                        android:textColor="#807F7F"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:justificationMode="inter_word"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dear Parent, OTP Payment should completed on or before due date. There after discount will lapse and 2 installment
fee will be applicable"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <!--Dup End-->

    </RelativeLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>
