<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/star_pattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llBack"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_16sdp"
            android:layout_height="wrap_content">
            <TextView
                style="@style/textstyle1_bold_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timetable"
                />
        </LinearLayout>
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_rounded_card"
    tools:context=".ui.parent.TimeTableActivity">
    <com.seglib.SegmentedButtonGroup
        android:id="@+id/segButton"
        android:layout_margin="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_2sdp"
        android:background="@color/white"
        app:position="0"
        app:radius="@dimen/_35sdp"
        app:rippleColor="@color/black"
        app:selectedBackground="@color/blue_300"
        app:selectedBorderColor="#555555"
        app:selectedBorderWidth="0dp"
        app:selectedButtonRadius="@dimen/_35sdp"
        app:selectionAnimationDuration="1000">
        <com.seglib.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/_4sdp"
            app:selectedTextColor="@color/white"
            app:text="MON"
            app:textColor="@color/black"
            app:textSize="@dimen/_10ssp" />
        <com.seglib.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/_4sdp"
            app:selectedTextColor="@color/white"
            app:text="TUE"
            app:textColor="@color/black"
            app:textSize="@dimen/_10ssp" />

        <com.seglib.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/_4sdp"
            app:selectedTextColor="@color/white"
            app:text="WED"
            app:textColor="@color/black"
            app:textSize="@dimen/_10ssp" />
        <com.seglib.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/_4sdp"
            app:selectedTextColor="@color/white"
            app:text="THU"
            app:textColor="@color/black"
            app:textSize="@dimen/_10ssp"/>
        <com.seglib.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/_4sdp"
            app:selectedTextColor="@color/white"
            app:text="FRI"
            app:textColor="@color/black"
            app:textSize="@dimen/_10ssp" />
        <com.seglib.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/_4sdp"
            app:selectedTextColor="@color/white"
            app:text="SAT"
            app:textColor="@color/black"
            app:textSize="@dimen/_10ssp" />
    </com.seglib.SegmentedButtonGroup>
    <TextView
        android:id="@+id/tvNoData"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:textColor="#F44336"
        android:text="Sorry,No Data Found"
        style="@style/textstyle1_bold_20"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/progress_circular_movie_article"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_below="@id/segButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
</LinearLayout>