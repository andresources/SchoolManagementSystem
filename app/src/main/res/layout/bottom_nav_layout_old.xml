<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.seglib.SegmentedButtonGroup
        android:id="@+id/buttonGroup_lordOfTheRings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:elevation="2dp"
        android:background="@color/bg_color"
        app:borderColor="@color/bg_color"
        app:borderWidth="1dp"
        app:divider="@color/bg_color"
        app:dividerPadding="10dp"
        app:dividerWidth="1dp"
        app:position="0"
        app:radius="30dp"
        app:ripple="true"
        app:rippleColor="#0000"
        app:selectedBackground="#000">

        <com.seglib.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:padding="10dp"

            app:drawable="@drawable/ic_home"
            app:drawableGravity="top"
            app:selectedTextColor="@color/white"
            app:text="Home"
            app:textColor="@color/gray" />

        <com.seglib.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:padding="10dp"
            app:drawable="@drawable/ic_payment"
            app:drawableGravity="top"
            app:selectedTextColor="@color/white"
            app:text="Payment"
            app:textColor="@color/gray" />

        <com.seglib.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:padding="10dp"
            app:drawable="@drawable/ic_profile1"
            app:drawableGravity="top"
            app:selectedTextColor="@color/white"
            app:text="Profile"
            app:textColor="@color/gray" />
        <com.seglib.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:padding="10dp"
            app:drawable="@drawable/ic_notification"
            app:drawableGravity="top"
            app:selectedTextColor="@color/white"
            app:text="Notification"
            app:textColor="@color/gray" />
    </com.seglib.SegmentedButtonGroup>
</RelativeLayout>